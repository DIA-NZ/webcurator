<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans default-autowire="no" default-lazy-init="false" default-dependency-check="none">
	
    <bean id="WCTCoreServletConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:wct-core.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
        <property name="order" value="150"/>
    </bean>
	
	<bean id="simpleUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping" abstract="false" singleton="true" lazy-init="default" autowire="default" dependency-check="default">
		<property name="interceptors">
			<list>
            	<ref bean="openSessionInViewInterceptor"/>
            </list>
		</property>
		
		<property name="mappings">
			<map>
				<entry key="/curator/logout.html" value="logoutController"/>
				<entry key="/curator/home.html" value="homeController"/>
				<entry key="/curator/profiles/profiles.html" value="profileController"/>
				<entry key="/curator/profiles/profilesH3.html" value="profileH3Controller"/>
				<entry key="/curator/profiles/profiletargets.html" value="profileTargetsController"/>
				<entry key="/curator/profiles/list.html" value="profileListController"/>
				<entry key="/curator/profiles/view.html" value="profileViewController"/>
				<entry key="/curator/profiles/delete.html" value="profileDeleteController"/>	
				<entry key="/curator/profiles/make-default.html" value="makeDefaultProfileController"/>
				<entry key="/curator/hibernate-test.html" value="hibernateTestController"/>
			</map>
		</property>
	</bean>
	
	<bean id="localeResolver" class="org.springframework.web.servlet.i18n.FixedLocaleResolver"/>
	
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
	    <property name="maxUploadSize" value="1500000"/>
	</bean>	

	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="requestContextAttribute" value="requestContext"/>
		<property name="viewClass" value="org.springframework.web.servlet.view.tiles.TilesView"/>
	</bean>
	
	<bean id="tilesConfigurer" class="org.springframework.web.servlet.view.tiles.TilesConfigurer">
	<property name="factoryClass" value="org.apache.struts.tiles.xmlDefinition.I18nFactorySet"/>
	<property name="definitions">
	<list>
	<value>/WEB-INF/tiles-defs.xml</value>
	</list>
	</property>
	</bean>

	<bean id="exceptionResolver"
		class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver"
		abstract="false" singleton="true" lazy-init="default"
		autowire="default" dependency-check="default">
		<property name="defaultErrorView">
			<value type="java.lang.String">Error</value>
		</property>
		<property name="exceptionMappings">
			<map>
				<entry
					key="org.springframework.orm.hibernate3.HibernateObjectRetrievalFailureException"
					value="NoObjectFound">
				</entry>
				<entry
				    key="org.springframework.web.multipart.MaxUploadSizeExceededException"
				    value="max-file-size-exceeeded"/>
			</map>
		</property>
	</bean>

	<bean id="homeController" class="org.webcurator.ui.home.controller.HomeController" abstract="false" singleton="true" lazy-init="default" autowire="default" dependency-check="default">
		<property name="supportedMethods" value="GET"/>
		<property name="inTrayManager" ref="inTrayManager"/>
		<property name="authorityManager" ref="authorityManager"/>
		<property name="siteManager" ref="siteManager"/>
		<property name="targetManager" ref="targetManager"/>
		<property name="targetInstanceManager" ref="targetInstanceManager"/>
		<property name="enableQaModule">
			<value type="java.lang.Boolean">${queueController.enableQaModule}</value>
		</property>	
	</bean>

	<bean id="openSessionInViewInterceptor" class="org.springframework.orm.hibernate3.support.OpenSessionInViewInterceptor" abstract="false" singleton="true" lazy-init="default" autowire="default" dependency-check="default">
		<property name="sessionFactory"><ref bean="sessionFactory"/></property>
	</bean>
	
	<bean id="logoutController" class="org.webcurator.ui.base.LogoutController" abstract="false" singleton="true" lazy-init="default" autowire="default" dependency-check="default"/>
	
	<bean id="qualityReviewFacade" class="org.webcurator.core.store.tools.QualityReviewFacade">
	 	<property name="digialAssetStore">
	 		<ref bean="digitalAssetStore"/>
	 	</property>
	 	<property name="targetInstanceDao">
	 		<ref bean="targetInstanceDao"/>
	 	</property>
	 	<property name="auditor">
	 		<ref bean="audit"/>
	 	</property>
	 </bean>
	
	<bean id="hibernateTestController" class="org.webcurator.ui.hibernate.HibernateTestController" abstract="false" singleton="true" lazy-init="default" autowire="default" dependency-check="default">
		<property name="supportedMethods" value="GET,POST"/>
		<property name="hibernateTestDAO" ref="hibernateTestDao"/>
	</bean>

	<!--  Profile Controller and Tab Configuration -->
	<bean id="profileListController" class="org.webcurator.ui.profiles.controller.ProfileListController">
		<property name="supportedMethods" value="GET,POST"/>
		<property name="profileManager" ref="profileManager"/>
		<property name="agencyUserManager" ref="agencyUserManager"/>
		<property name="authorityManager" ref="authorityManager"/>
	</bean>
	
	<bean id="profileTargetsController" class="org.webcurator.ui.profiles.controller.ProfileTargetsController">
		<property name="supportedMethods" value="GET,POST"/>
		<property name="profileManager" ref="profileManager"/>
		<property name="authorityManager" ref="authorityManager"/>
		<property name="targetManager" ref="targetManager"/>
		<property name="targetDao" ref="targetDao"/>
	</bean>

	<bean id="profileViewController" class="org.webcurator.ui.profiles.controller.ProfileViewController">
		<property name="profileManager" ref="profileManager"/>
		<property name="authorityManager" ref="authorityManager"/>
	</bean>

	<bean id="profileDeleteController" class="org.webcurator.ui.profiles.controller.DeleteProfileController">
		<property name="profileManager" ref="profileManager"/>
		<property name="messageSource" ref="messageSource"/>
		<property name="agencyUserManager" ref="agencyUserManager"/>
		<property name="authorityManager" ref="authorityManager"/>
	</bean>
	
	<bean id="makeDefaultProfileController" class="org.webcurator.ui.profiles.controller.MakeDefaultProfileController">
		<property name="profileManager" ref="profileManager"/>
		<property name="agencyUserManager" ref="agencyUserManager"/>
		<property name="authorityManager" ref="authorityManager"/>
	</bean>
	
	<bean id="profileController" class="org.webcurator.ui.profiles.controller.ProfileController" abstract="false" singleton="true" lazy-init="default" autowire="default" dependency-check="default">
		<property name="supportedMethods" value="GET,POST"/>
		<property name="tabConfig" ref="profileTabConfig"/> 
		<property name="defaultCommandClass" value="org.webcurator.ui.profiles.command.DefaultCommand"/>
		<property name="profileManager" ref="profileManager"/>		
		<property name="authorityManager" ref="authorityManager"/>
	</bean>

	<bean id="profileH3Controller" class="org.webcurator.ui.profiles.controller.ProfileController" abstract="false" singleton="true" lazy-init="default" autowire="default" dependency-check="default">
		<property name="supportedMethods" value="GET,POST"/>
		<property name="tabConfig" ref="profileH3TabConfig"/>
		<property name="defaultCommandClass" value="org.webcurator.ui.profiles.command.DefaultCommand"/>
		<property name="profileManager" ref="profileManager"/>
		<property name="authorityManager" ref="authorityManager"/>
	</bean>

	<bean id="profileTabConfig" class="org.webcurator.ui.util.TabConfig" abstract="false" singleton="true" lazy-init="default" autowire="default" dependency-check="default">
		<property name="viewName" value="profile"/>	
		<property name="tabs">
			<list>
				<bean class="org.webcurator.ui.util.Tab">
					<property name="pageId" value="GENERAL" />
					<property name="title" value="general" />
					<property name="jsp" value="../profile-general.jsp" />
					<property name="commandClass" value="org.webcurator.ui.profiles.command.GeneralCommand"/>
					<property name="validator">
						<bean class="org.webcurator.ui.profiles.validator.ProfileGeneralValidator" />
					</property>
					<property name="tabHandler">
						<bean class="org.webcurator.ui.profiles.controller.ProfileGeneralHandler"/>
					</property>
				</bean>

				<bean class="org.webcurator.ui.util.Tab">
					<property name="pageId" value="BASE" />
					<property name="title" value="base" />
					<property name="jsp" value="../profile-page-view.jsp" />
					<property name="commandClass" value="org.webcurator.ui.util.EmptyCommand"/>
					<property name="validator"><null/></property>
					<property name="tabHandler">
						<bean class="org.webcurator.ui.profiles.controller.HeritrixProfileHandler">
							<property name="baseAttribute" value="/crawl-order"/>
							<property name="recursionFilter">
								<bean class="org.webcurator.ui.profiles.renderers.GeneralOnlyRendererFilter"/>
							</property>
						</bean>
					</property>										
				</bean>

				<bean class="org.webcurator.ui.util.Tab">
					<property name="pageId" value="SCOPE" />
					<property name="title" value="scope" />
					<property name="jsp" value="../profile-page-view.jsp" />
					<property name="commandClass" value="org.webcurator.ui.util.EmptyCommand"/>
					<property name="validator"><null/></property>
					<property name="tabHandler">
						<bean class="org.webcurator.ui.profiles.controller.HeritrixProfileHandler">
							<property name="baseAttribute" value="/crawl-order/scope"/>
						</bean>
					</property>										
				</bean>
				
				<bean class="org.webcurator.ui.util.Tab">
					<property name="pageId" value="FRONTIER" />
					<property name="title" value="frontier" />
					<property name="jsp" value="../profile-page-view.jsp" />
					<property name="commandClass" value="org.webcurator.ui.util.EmptyCommand"/>
					<property name="validator"><null/></property>
					<property name="tabHandler">
						<bean class="org.webcurator.ui.profiles.controller.HeritrixProfileHandler">
							<property name="baseAttribute" value="/crawl-order/frontier"/>
						</bean>
					</property>										
				</bean>				
				
				<bean class="org.webcurator.ui.util.Tab">
					<property name="pageId" value="PREFETCH" />
					<property name="title" value="prefetchers" />
					<property name="jsp" value="../profile-page-view.jsp" />
					<property name="commandClass" value="org.webcurator.ui.util.EmptyCommand"/>
					<property name="validator"><null/></property>
					<property name="tabHandler">
						<bean class="org.webcurator.ui.profiles.controller.HeritrixProfileHandler">
							<property name="baseAttribute" value="/crawl-order/pre-fetch-processors"/>
						</bean>
					</property>										
				</bean>			
				
				<bean class="org.webcurator.ui.util.Tab">
					<property name="pageId" value="FETCH" />
					<property name="title" value="fetchers" />
					<property name="jsp" value="../profile-page-view.jsp" />
					<property name="commandClass" value="org.webcurator.ui.util.EmptyCommand"/>
					<property name="validator"><null/></property>
					<property name="tabHandler">
						<bean class="org.webcurator.ui.profiles.controller.HeritrixProfileHandler">
							<property name="baseAttribute" value="/crawl-order/fetch-processors"/>
						</bean>
					</property>										
				</bean>		
				
				<bean class="org.webcurator.ui.util.Tab">
					<property name="pageId" value="EXTRACT"/>
					<property name="title" value="extractors"/>
					<property name="jsp" value="../profile-page-view.jsp" />
					<property name="commandClass" value="org.webcurator.ui.util.EmptyCommand"/>
					<property name="validator"><null/></property>
					<property name="tabHandler">
						<bean class="org.webcurator.ui.profiles.controller.HeritrixProfileHandler">
							<property name="baseAttribute" value="/crawl-order/extract-processors"/>
						</bean>
					</property>										
				</bean>	
				
				<bean class="org.webcurator.ui.util.Tab">
					<property name="pageId" value="WRITE"/>
					<property name="title" value="writers"/>
					<property name="jsp" value="../profile-page-view.jsp" />
					<property name="commandClass" value="org.webcurator.ui.util.EmptyCommand"/>
					<property name="validator"><null/></property>
					<property name="tabHandler">
						<bean class="org.webcurator.ui.profiles.controller.HeritrixProfileHandler">
							<property name="baseAttribute" value="/crawl-order/write-processors"/>
						</bean>
					</property>										
				</bean>				
				
				<bean class="org.webcurator.ui.util.Tab">
					<property name="pageId" value="POST"/>
					<property name="title" value="postprocessors"/>
					<property name="jsp" value="../profile-page-view.jsp" />
					<property name="commandClass" value="org.webcurator.ui.util.EmptyCommand"/>
					<property name="validator"><null/></property>
					<property name="tabHandler">
						<bean class="org.webcurator.ui.profiles.controller.HeritrixProfileHandler">
							<property name="baseAttribute" value="/crawl-order/post-processors"/>
						</bean>
					</property>										
				</bean>																
			</list>
		</property>
	</bean>

	<bean id="profileH3TabConfig" class="org.webcurator.ui.util.TabConfig" abstract="false" singleton="true" lazy-init="default" autowire="default" dependency-check="default">
		<property name="viewName" value="profileH3"/>
		<property name="tabs">
			<list>
				<bean class="org.webcurator.ui.util.Tab">
					<property name="pageId" value="GENERAL" />
					<property name="title" value="general" />
					<property name="jsp" value="../profileH3-general.jsp" />
					<property name="commandClass" value="org.webcurator.ui.profiles.command.GeneralCommand"/>
					<property name="validator">
						<bean class="org.webcurator.ui.profiles.validator.ProfileGeneralValidator" />
					</property>
					<property name="tabHandler">
						<bean class="org.webcurator.ui.profiles.controller.ProfileGeneralHandler"/>
					</property>
				</bean>
				<bean class="org.webcurator.ui.util.Tab">
					<property name="pageId" value="SCOPE" />
					<property name="title" value="scope" />
					<property name="jsp" value="../profileH3-scope.jsp" />
					<property name="commandClass" value="org.webcurator.ui.profiles.command.Heritrix3ProfileCommand"/>
					<property name="validator">
						<bean class="org.webcurator.ui.profiles.validator.Heritrix3ProfileValidator" />
					</property>
					<property name="tabHandler">
						<bean class="org.webcurator.ui.profiles.controller.Heritrix3ProfileHandler"/>
					</property>
				</bean>
			</list>
		</property>
	</bean>
	      
</beans>

